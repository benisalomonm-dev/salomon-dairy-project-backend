# Docker Environment Configuration
# Copy this to .env and customize for your deployment

# Environment
NODE_ENV=production

# Server
PORT=5000
API_VERSION=v1

# Database (MySQL) - Docker automatically connects
DB_HOST=mysql
DB_PORT=3306
DB_NAME=dairy_management
DB_USER=dairy_user
DB_PASSWORD=dairy123

# JWT - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-now
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-change-this-now
JWT_REFRESH_EXPIRE=30d

# Email Configuration (Optional - for notifications and password reset)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@dairysystem.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CRON Jobs (Optional)
CRON_ENABLED=false
